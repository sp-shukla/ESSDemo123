@model IEnumerable<EmployeeDto>
@{
    ViewData["Title"] = "Search";
}

<h1 class="text-center text-bg-primary mb-2 p-2 border-bottom border-light">Employee</h1>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Profile Picture</th>
            <th>First Name</th>
            <th>Last Name</th>

            <th></th>
        </tr>

    </thead>
    <tbody>
        @if (Model == null)
        {

        }
        else
        {
            @foreach (var item in Model)
            {
                <tr>
                    <td width="25%">
                        <img src="@item.ImageUrl" style="width:75px;height:auto">
                    </td>
                    <td width="25%">
                        @item.FirstName
                    </td>
                    <td width="25%">
                        @item.LastName
                    </td>


                    <td width="25%">
                        <div class="w-75 btn-group" role="group">
                            <div class="w-75 btn-group" role="group">
                                <a onclick="return confirm('Are You want to sign in ?')" asp-action="CreateTempBadge" asp-controller="Guard" class="btn btn-primary mx-2" asp-route-id="@item.EmployeeId">This is me</a>
                            </div>
                        </div>
                    </td>

                </tr>

            }
        }
    </tbody>
</table>
